@model BookStoreMVC.Models.ChuDe

@{
    ViewBag.Title = "Xoachude";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}
<h2 style="text-align:center">XÁC NHẬN THÔNG TIN CẦN XÓA</h2>
<h3 style="text-align:center">Bạn quyết định xóa chủ đề này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên chủ đề :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenChuDe)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div style="text-align:center" class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("TRỞ VỀ", "Chude")
        </div>
    }
</div>
