
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/_Layout.cshtml";
}

<table align="center">
    <h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Họ tên khách hàng:</td>
            <td>
                @Html.TextBox("HotenKH")
                @ViewData["Lỗi 1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Tên đăng nhập:</td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Lỗi 2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu:</td>
            <td>
                @Html.Password("Matkhau")
                @ViewData["Lỗi 3"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu nhập lại:</td>
            <td>
                @Html.Password("Matkhaunhaplai")
                @ViewData["Lỗi 4"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Email:</td>
            <td>
                @Html.TextBox("Email")
                @ViewData["Lỗi 5"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Điện thoại:</td>
            <td>
                @Html.TextBox("Dienthoai")
                @ViewData["Lỗi 6"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Ngày sinh:</td>
            <td>
                <input type="date" name="Ngaysinh" />
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit" name="Đăng ký" />
            </td>
        </tr>
    }
</table>

